" Leader (must come before mappings)
" Can't use <Space> :(
let mapleader = ","

" Basic settings
set incsearch
set hlsearch
set ignorecase
set smartcase

" Use Google
set defsearch=google
set suggestengines=google

" Scrolling
nnoremap j 2j
nnoremap k 2k
nnoremap h 2h
nnoremap l 2l

" Tmux style tabs
map <C-a>c t
map <C-a>n <C-Tab>
map <C-a>p <S-C-Tab>
map <C-a>x d

" Reload ~/.vimperatorrc
noremap <Leader>vr :source ~/.vimperatorrc<CR>

" Don't auto-start navigation in insert mode
set gui=tabs,nonavigation
set focuscontent

" Colorscheme
colorscheme zenburn

" vim: ft=vim ts=4 sw=4 sts=0 et
